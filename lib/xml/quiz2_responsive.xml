<?xml version="1.0" encoding="utf-8" ?>
<data>

    <events>
		<event id="btnover">
			<rollover>
				<css name="btnOverCss">this</css>
			</rollover>
			
			<rollout>
				<css name="btnOutCss">this</css>
			</rollout>
		</event>

		<event id="optionover">
			<rollover>
				<css name="optionOverCss">this</css>
			</rollover>
			
			<rollout>
				<css name="optionOutCss">this</css>
			</rollout>
		</event>
		
		<event id="selectandsubmit">
			<click>
				<css name="optionOverCss">this</css>
				<function name="select">this</function>
				<function name="submit">this</function>
			</click>
		</event>

		<event id="select">
			<click>
				<css name="optionOverCss">this</css>
				<function name="select">this</function>
			</click>
		</event>

		<event id="submit">
			<click>
				<function name="submit">this</function>
			</click>
		</event>

		<event id="reset">
			<click>
				<function name="reset">this</function>
			</click>
		</event>
		
        <event id="begin">
            <click>
                <anim type="remove" animtime="0" oncomplete="0">openingText</anim>
                <function name="begin">this</function>
            </click>
        </event>

        <event id="loadNextQuestion">
            <click>
                <function name="loadNextQuestion">this</function>
            </click>
        </event>
		
		<event id="restart">
            <click>
                <function name="restart">this</function>
            </click>
        </event>

        <event id="showq1bg">
            <click>
                <anim type="show" animtime="2" oncomplete="0">q1bg</anim>
            </click>
        </event>

         <event id="hidepassbg">
            <click>
            	<anim type="hide" animtime="2" oncomplete="0">passbg</anim>
            </click>
        </event>

        <event id="showpassbg">
            <click>
                <anim type="show" animtime="5" oncomplete="0">passbg</anim>
            </click>
        </event>

        <event id="hidefailbg">
            <click>
            	<anim type="hide" animtime="2" oncomplete="0">failbg</anim>
            </click>
        </event>

        <event id="showfailbg">
            <click>
                <anim type="show" animtime="2" oncomplete="0">failbg</anim>
            </click>
        </event>
    </events>    

    <box id="failbg" position="absolute" x="0" y="0" width="100%" height="100%" anim="hide" class="failbg" />
    <box id="orangebg" position="absolute" x="0" y="0" width="100%" height="100%" anim="hide" class="orangebg" />


    <!--responsive timer-->
    <!--2 column layout, timer on the right, moves to top center on phones-->
    <box id="timerRow" position="absolute" x="0" y="0" anim="none" animtime="0.5" animdelay="1" class="col-md-10 col-md-offset-1">
    	<box id="timerCol1" position="relative" class="col-md-6" />
    	<box id="timerContainer" position="relative" class="col-md-6" />
    </box>

    <!--opening text-->
    <box id="openingText" position="relative" anim="left" animtime="0.5" animdelay="1" class="col-md-10 col-md-offset-1 vertical-align" z-index="3">

    	<text id="title" position="relative" margin-top="20" anim="none"><![CDATA[<h1 class="black">Welcome to iASSESS!</h1><p class="p_16_black">Click <strong>START!</strong>when you're ready.</p><p class="p_32_black">For each question, select the answer before your time runs out!</p>]]></text>

    	<button id="goBtn" position="relative" height="80" width="200" margin-top="40" margin-bottom="20" anim="none" event="btnover,begin" target="title"><![CDATA[<h1 class="btn-green">START!</h1>]]></button>
    </box>

    <!--timed quiz-->
    <custom type="quiz" id="quiz" position="relative" x="0" y="0" class="col-md-10 col-md-offset-1">
		<settings timer="true" timerx="0" timery="0"/>


		<!-- question 1 -->
        <question id="q1" time="15" event="">

    		<box id="col1" position="relative" class="col-md-6" />
    		<box id="col2" position="relative" class="col-md-6" />

    		<text id="question1" position="relative" target="col1" x="0" margin-top="150" margin-bottom="40" anim="left" animtime="0.5"><![CDATA[<p class="p_24">Which of the following items does not belong in the 5S system?</p>]]></text>
			
			<!--option 1 -->
			<option correct="true">
				<text id="option1_1" position="relative" target="col1" x="match" width="100%" margin-bottom="10" anim="show" animtime="0.5" animdelay="0.5" event="optionover,selectandsubmit" class="optionBox"><![CDATA[<p class="p_16 white">Sit</p>]]></text>
			</option>
			
			<!--option 2 -->	
			<option correct="false">
				<text id="option1_2" position="relative" target="col1" x="match" width="100%" margin-bottom="10" anim="show" animtime="0.5" animdelay="0.6" event="optionover,selectandsubmit" class="optionBox"><![CDATA[<p class="p_16 white">Shine</p>]]></text>
			</option>
			
			<!--option 3 -->
			<option correct="false">
				<text id="option4_3" position="relative" target="col1" x="match" width="100%" margin-bottom="40" anim="show" animtime="0.5" animdelay="0.7" event="optionover,selectandsubmit" class="optionBox" float="left"><![CDATA[<p class="p_16 white">Sustain</p>]]></text>
			</option>
			<!--/options -->
	
			<!-- feedbacks -->
			<fb id="pass" event="">	
				<box id="fb" position="relative" target="col2" x="0" margin-top="150" clear="both" anim="show" animtime="0.5">
					<image id="passimage" position="relative" x="0" y="0" margin-bottom="30" anim="none" class="img-responsive"><![CDATA[img/quiz/1.jpg]]></image>

					<text id="txt1" position="relative" anim="none" margin-bottom="30"><![CDATA[<p class="p_24">Correct!</p><p>The 5S system is composed of Sort, Set in Order, Shine, Standardize, and Sustain.</p>]]></text>
			
					<button id="nextQBtn" position="relative" margin-bottom="10" width="150" anim="none" event="btnover,loadNextQuestion"><![CDATA[Try the next one]]></button>

					<text id="bottompad" position="relative" anim="none"><![CDATA[<p>&nbsp;</p>]]></text>
				</box>
			</fb>
			
			<fb id="fail" event="">	
				<box id="fb" position="relative" target="col2" x="0" margin-top="150" clear="both" anim="show" animtime="0.5">
					<image id="failimage" position="relative" x="0" y="0" margin-bottom="30" anim="none" class="img-responsive"><![CDATA[img/quiz/1.jpg]]></image>

					<text id="txt1" position="relative" anim="none" margin-bottom="30"><![CDATA[<p class="p_24">No!</p><p>The 5S system is composed of Sort, Set in Order, Shine, Standardize, and Sustain.</p>]]></text>
			
					<button id="nextQBtn" position="relative" margin-bottom="10" width="150" anim="none" event="btnover,loadNextQuestion"><![CDATA[Try the next one]]></button>

					<text id="bottompad" position="relative" anim="none"><![CDATA[<p>&nbsp;</p>]]></text>
				</box>
			</fb>
		</question>

		<!-- question 2 -->
        <question id="q2" time="15" event="">

    		<box id="col1" position="relative" class="col-md-6" />
    		<box id="col2" position="relative" class="col-md-6" />

    		<text id="question2" position="relative" target="col1" x="0" margin-top="150" margin-bottom="40" anim="left" animtime="0.5"><![CDATA[<p class="p_24">What do you call to that setup utility where you configure the “Boot Priority Settings” where you can select the disk that contains the Operating System?</p>]]></text>
			
			<!--option 1 -->
			<option correct="false">
				<text id="option1_1" position="relative" target="col1" x="match" width="100%" margin-bottom="10" anim="show" animtime="0.5" animdelay="0.5" event="optionover,selectandsubmit" class="optionBox"><![CDATA[<p class="p_16 white">OHS</p>]]></text>
			</option>
			
			<!--option 2 -->	
			<option correct="false">
				<text id="option1_2" position="relative" target="col1" x="match" width="100%" margin-bottom="10" anim="show" animtime="0.5" animdelay="0.6" event="optionover,selectandsubmit" class="optionBox"><![CDATA[<p class="p_16 white">CMOS</p>]]></text>
			</option>
			
			<!--option 3 -->
			<option correct="true">
				<text id="option4_3" position="relative" target="col1" x="match" width="100%" margin-bottom="40" anim="show" animtime="0.5" animdelay="0.7" event="optionover,selectandsubmit" class="optionBox" float="left"><![CDATA[<p class="p_16 white">BIOS</p>]]></text>
			</option>
			<!--/options -->
	
			<!-- feedbacks -->
			<fb id="pass" event="">	
				<box id="fb" position="relative" target="col2" x="0" margin-top="150" clear="both" anim="show" animtime="0.5">
					<image id="passimage" position="relative" x="0" y="0" margin-bottom="30" anim="none" class="img-responsive"><![CDATA[img/quiz/2.jpg]]></image>

					<text id="txt1" position="relative" anim="none" margin-bottom="30"><![CDATA[<p class="p_24">Correct!</p><p> BIOS is a special computer software or setup utility where you can select the disk that contains an Operating System. BIOS is an acronym for “Basic Input / Output System”</p>]]></text>
			
					<button id="nextQBtn" position="relative" margin-bottom="10" width="150" anim="none" event="btnover,loadNextQuestion"><![CDATA[Try the next one]]></button>

					<text id="bottompad" position="relative" anim="none"><![CDATA[<p>&nbsp;</p>]]></text>
				</box>
			</fb>
			
			<fb id="fail" event="">	
				<box id="fb" position="relative" target="col2" x="0" margin-top="150" clear="both" anim="show" animtime="0.5">
					<image id="failimage" position="relative" x="0" y="0" margin-bottom="30" anim="none" class="img-responsive"><![CDATA[img/quiz/2.jpg]]></image>

					<text id="txt1" position="relative" anim="none" margin-bottom="30"><![CDATA[<p class="p_24">No!</p><p> BIOS is a special computer software or setup utility where you can select the disk that contains an Operating System. BIOS is an acronym for “Basic Input / Output System”</p>]]></text>
			
					<button id="nextQBtn" position="relative" margin-bottom="10" width="150" anim="none" event="btnover,loadNextQuestion"><![CDATA[Try the next one]]></button>

					<text id="bottompad" position="relative" anim="none"><![CDATA[<p>&nbsp;</p>]]></text>
				</box>
			</fb>
		</question>

		<!-- question 3 -->
        <question id="q3" time="15" event="">

    		<box id="col1" position="relative" class="col-md-6" />
    		<box id="col2" position="relative" class="col-md-6" />

    		<text id="question3" position="relative" target="col1" x="0" margin-top="150" margin-bottom="40" anim="left" animtime="0.5"><![CDATA[<p class="p_24">What should be done if the display does not match what you expect to view on the monitor?</p>]]></text>
			
			<!--option 1 -->
			<option correct="false">
				<text id="option1_1" position="relative" target="col1" x="match" width="100%" margin-bottom="10" anim="show" animtime="0.5" animdelay="0.5" event="optionover,selectandsubmit" class="optionBox"><![CDATA[<p class="p_16 white">Check if the video / graphics driver is working properly</p>]]></text>
			</option>
			
			<!--option 2 -->	
			<option correct="false">
				<text id="option1_2" position="relative" target="col1" x="match" width="100%" margin-bottom="10" anim="show" animtime="0.5" animdelay="0.6" event="optionover,selectandsubmit" class="optionBox"><![CDATA[<p class="p_16 white">Install a sound card</p>]]></text>
			</option>
			
			<!--option 3 -->
			<option correct="true">
				<text id="option4_3" position="relative" target="col1" x="match" width="100%" margin-bottom="40" anim="show" animtime="0.5" animdelay="0.7" event="optionover,selectandsubmit" class="optionBox" float="left"><![CDATA[<p class="p_16 white">Install a Video Card</p>]]></text>
			</option>
			<!--/options -->
	
			<!-- feedbacks -->
			<fb id="pass" event="">	
				<box id="fb" position="relative" target="col2" x="0" margin-top="150" clear="both" anim="show" animtime="0.5">
					<image id="passimage" position="relative" x="0" y="0" margin-bottom="30" anim="none" class="img-responsive"><![CDATA[img/quiz/3.jpg]]></image>

					<text id="txt1" position="relative" anim="none" margin-bottom="30"><![CDATA[<p class="p_24">Correct!</p><p>Graphics Card driver or Video driver is the one responsible for the graphics, and everything you see on a display device like a monitor.</p>]]></text>
			
					<button id="nextQBtn" position="relative" margin-bottom="10" width="150" anim="none" event="btnover,loadNextQuestion"><![CDATA[Try the next one]]></button>

					<text id="bottompad" position="relative" anim="none"><![CDATA[<p>&nbsp;</p>]]></text>
				</box>
			</fb>
			
			<fb id="fail" event="">	
				<box id="fb" position="relative" target="col2" x="0" margin-top="150" clear="both" anim="show" animtime="0.5">
					<image id="failimage" position="relative" x="0" y="0" margin-bottom="30" anim="none" class="img-responsive"><![CDATA[img/quiz/3.jpg]]></image>

					<text id="txt1" position="relative" anim="none" margin-bottom="30"><![CDATA[<p class="p_24">No!</p><p>Graphics Card driver or Video driver is the one responsible for the graphics, and everything you see on a display device like a monitor.</p>]]></text>
			
					<button id="nextQBtn" position="relative" margin-bottom="10" width="150" anim="none" event="btnover,loadNextQuestion"><![CDATA[Try the next one]]></button>

					<text id="bottompad" position="relative" anim="none"><![CDATA[<p>&nbsp;</p>]]></text>
				</box>
			</fb>
		</question>
		
		<!-- question 4 -->
        <question id="q4" time="15" event="">

    		<box id="col1" position="relative" class="col-md-6" />
    		<box id="col2" position="relative" class="col-md-6" />

    		<text id="question4" position="relative" target="col1" x="0" margin-top="150" margin-bottom="40" anim="left" animtime="0.5"><![CDATA[<p class="p_24">What should be done if the display does not match what you expect to view on the monitor?</p>]]></text>
			
			<!--option 1 -->
			<option correct="false">
				<text id="option1_1" position="relative" target="col1" x="match" width="100%" margin-bottom="10" anim="show" animtime="0.5" animdelay="0.5" event="optionover,selectandsubmit" class="optionBox"><![CDATA[<p class="p_16 white">Check if the video / graphics driver is working properly</p>]]></text>
			</option>
			
			<!--option 2 -->	
			<option correct="false">
				<text id="option1_2" position="relative" target="col1" x="match" width="100%" margin-bottom="10" anim="show" animtime="0.5" animdelay="0.6" event="optionover,selectandsubmit" class="optionBox"><![CDATA[<p class="p_16 white">Install a sound card</p>]]></text>
			</option>
			
			<!--option 3 -->
			<option correct="true">
				<text id="option4_3" position="relative" target="col1" x="match" width="100%" margin-bottom="40" anim="show" animtime="0.5" animdelay="0.7" event="optionover,selectandsubmit" class="optionBox" float="left"><![CDATA[<p class="p_16 white">Install a Video Card</p>]]></text>
			</option>
			<!--/options -->
	
			<!-- feedbacks -->
			<fb id="pass" event="">	
				<box id="fb" position="relative" target="col2" x="0" margin-top="150" clear="both" anim="show" animtime="0.5">
					<image id="passimage" position="relative" x="0" y="0" margin-bottom="30" anim="none" class="img-responsive"><![CDATA[img/quiz/3.jpg]]></image>

					<text id="txt1" position="relative" anim="none" margin-bottom="30"><![CDATA[<p class="p_24">Correct!</p><p>Graphics Card driver or Video driver is the one responsible for the graphics, and everything you see on a display device like a monitor.</p>]]></text>
			
					<button id="nextQBtn" position="relative" margin-bottom="10" width="150" anim="none" event="btnover,loadNextQuestion"><![CDATA[Try the next one]]></button>

					<text id="bottompad" position="relative" anim="none"><![CDATA[<p>&nbsp;</p>]]></text>
				</box>
			</fb>
			
			<fb id="fail" event="">	
				<box id="fb" position="relative" target="col2" x="0" margin-top="150" clear="both" anim="show" animtime="0.5">
					<image id="failimage" position="relative" x="0" y="0" margin-bottom="30" anim="none" class="img-responsive"><![CDATA[img/quiz/3.jpg]]></image>

					<text id="txt1" position="relative" anim="none" margin-bottom="30"><![CDATA[<p class="p_24">No!</p><p>Graphics Card driver or Video driver is the one responsible for the graphics, and everything you see on a display device like a monitor.</p>]]></text>
			
					<button id="nextQBtn" position="relative" margin-bottom="10" width="150" anim="none" event="btnover,loadNextQuestion"><![CDATA[Try the next one]]></button>

					<text id="bottompad" position="relative" anim="none"><![CDATA[<p>&nbsp;</p>]]></text>
				</box>
			</fb>
		</question>

		<!--generic timeout text-->
		<timeout>
			<box id="center" position="relative" height="100%"> 
	            <box id="timeOut" position="relative" height="350" margin-top="0" margin-bottom="20" anim="left" animtime="1" ease="Bounce.easeOut" class="col-sm-8 col-sm-offset-2 vertical-align border timesupbg">

					<text id="timeoutTxt" position="relative" x="10" margin-top="30" margin-bottom="20" anim="none"><![CDATA[<p class="p_42 white">Times up!</p>]]></text>
			
					<button id="startAgainBtn" position="relative" x="10" margin-bottom="30" height="80" width="200" anim="none" event="btnover,restart"><![CDATA[Try again, Faster!]]></button>
				</box>
			</box>
        </timeout>


        <!--score screen-->
        <score masteryscore="80">
           <fb id="pass" event="">
            	<box id="center" position="relative" height="100%">
	            	<box id="passTextBox" position="relative" height="350" margin-top="0" margin-bottom="20" anim="left" animtime="0.5" class="col-sm-8 col-sm-offset-2 vertical-align border passbg">
						
						<text id="pass_txt" position="relative" x="10" margin-top="30" margin-bottom="20" anim="none">
						<![CDATA[<p class="p_30 white glow">CONGRATULATIONS!</p><p class="p_24 orange glow">You have scored [score]%! Looks like you have a good chance of passing the <strong>TESDA's Computer Systems Servicing NCII</strong></p>]]></text>
						
						<button id="goBtn" position="relative" x="10" margin-bottom="30" height="40" width="200" anim="none" event="btnover,restart,hidepassbg"><![CDATA[Try iASSESS again?]]></button>
	                </box>
                </box>
            </fb>
            
            <fb id="fail" event="">
  				<box id="center" position="relative" height="100%">
	            	<box id="failTextBox" position="relative" height="350" margin-top="0" margin-bottom="20" anim="left" animtime="0.5" class="col-sm-8 col-sm-offset-2 vertical-align border failbg">

	                    <text id="fail_txt" position="relative" x="10" margin-top="30" margin-bottom="20" anim="none"><![CDATA[<p class="p_32 white glow">Study smarter! You scored [score]%</p><p class="p_24 orange glow">Why not have another go?</p>]]></text>
	                        
						<button id="goBtn" position="relative" x="10" margin-bottom="30" height="40" width="120" anim="none" animtime="0.5" event="btnover,restart,hidefailbg"><![CDATA[Start again]]></button>
	                </box> 
                </box> 
            </fb>
        </score>

    </custom>

</data>

